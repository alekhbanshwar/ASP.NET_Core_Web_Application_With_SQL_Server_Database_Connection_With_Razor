@page
@model ASP.NET_Core_Web_Application_With_SQL_Server_Database_Connection.Pages.Clients.CreateModel
@{
}
<br />
<h2>Add New Client</h2>
@if (Model.ErrorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form method="post" action="">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" placeholder="enter your name" name="name" value="@Model.clientsInfo.name" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="email" class="form-control" placeholder="enter your email" name="email" value="@Model.clientsInfo.email" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Mobile Number</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" placeholder="enter your mobile number" name="phone" value="@Model.clientsInfo.phone" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <textarea class="form-control" cols="1" rows="1" placeholder="enter your address" name="address">@Model.clientsInfo.address</textarea>
        </div>
    </div>

    @if (Model.SuccessMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.SuccessMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="offset-sm-3 col-sm-3 d-grid ">
            <button type="submit" class="btn btn-success btn-sm">Submit</button>
        </div>
        <div class=" col-sm-3 d-grid ">
            <a class="btn btn-outline-primary btn-sm" href="/" role="button">Cancle</a>
        </div>
    </div>
</form>